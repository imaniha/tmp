FROM node:20-slim

# Set working directory
WORKDIR /workspace

# Copy package files
COPY package.json package-lock.json ./
COPY nx.json tsconfig.base.json ./

# Install dependencies
RUN npm ci

# Copy workspace files
COPY apps/ ./apps/
COPY libs/ ./libs/
COPY jest.preset.js ./

# Expose port
EXPOSE 4200

# Run the frontend
CMD ["npx", "nx", "serve", "frontend", "--host", "0.0.0.0", "--port", "4200"]

